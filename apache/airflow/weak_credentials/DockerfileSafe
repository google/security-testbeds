FROM ubuntu:22.04
LABEL authors="am0o0"
RUN apt update  \
    && apt install python3 python3-venv python3-pip -y
RUN mkdir airflowWorkSpace
WORKDIR airflowWorkSpace
RUN mkdir config
COPY webserver_config_safe.py config/webserver_config.py

RUN python3 -m venv .venv
RUN bash -c "source .venv/bin/activate && pip install apache-airflow"

ENTRYPOINT ["bash","-c","export AIRFLOW_HOME='/airflowWorkSpace/config'; \
                                                    source .venv/bin/activate && airflow standalone"]
